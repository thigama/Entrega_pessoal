@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <header class="container">
            <div id="carrouselMain" class="carousel slide carousel-dark" data-ride="true">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carrouselMain" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#carrouselMain" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#carrouselMain" data-bs-slide-to="2"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active text-center" data-bs-interval="3000">
                        <img src="/entrega-pessoal/src/main/resources/static/img/slides/slide01.jpg" alt="" class="img-fluid d-none d-md-block w-100">
                        <img src="/entrega-pessoal/src/main/resources/static/img/slides/slide01small.jpg" alt="" class="img-fluid d-block d-md-none">
                        <h2 class="mb-3"><a href="/entrega-pessoal/src/main/resources/templates/pages/destinos.html"
                                class="text-decoration-none text-dark">Destinos</a></h2>
                    </div>
                    <div class="carousel-item text-center" data-bs-interval="3000">
                        <img src="/entrega-pessoal/src/main/resources/static/img/slides/slide02.jpg" alt="" class="img-fluid d-none d-md-block w-100">
                        <img src="/entrega-pessoal/src/main/resources/static/img/slides/slide02small.jpg" alt="" class="img-fluid d-block d-md-none">
                        <h2 class="mb-3"><a href="/entrega-pessoal/src/main/resources/templates/pages/hospedagem.html"
                                class="text-decoration-none text-dark">Hospedagem</a></h2>
                    </div>
                    <div class="carousel-item text-center" data-bs-interval="3000">
                        <img src="/entrega-pessoal/src/main/resources/static/img/slides/slide03.jpg" alt="" class="img-fluid d-none d-md-block w-100">
                        <img src="/entrega-pessoal/src/main/resources/static/img/slides/slide03small.jpg" alt="" class="img-fluid d-block d-md-none">
                        <h2 class="mb-3"><a href="/entrega-pessoal/src/main/resources/templates/pages/outrosServicos.html"
                                class="text-decoration-none text-dark">Outros Serviços</a></h2>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carrouselMain"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carrouselMain"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                    <span class="visually-hidden">Next</span>
                </button>
                <hr class="mt-3" />
        </header>

        
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <form class="col-sm-10 col-md-8 col-lg-6">
                    <h1 class="mb-3">Entre em contato</h1>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" autofocus id="txtNome" placeholder=" ">
                        <label for="txtNome">Nome Completo</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="txtEmail" placeholder=" ">
                        <label for="txtEmail">E-mail</label>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="txtMensagem" placeholder=" " style="height: 200px;"></textarea>
                        <label for="txtMensagem">Mensagem</label>
                    </div>
                    <button class="btn btn-lg btn-danger" type="button" onclick="window.location.href=`/pages/confirmacontato.html`">Enviar Mensagem</button>
                    <p class="mt-3">
                        O prazo de resposta é de 2 a 5 dias úteis.
                    </p>
                    <p class="mt-3">
                        Atenciosamente,<br>
                        Central de Relacionamento RECODETUR.
                    </p>
                </form>
            </div>          
        </div>
    </main>

</div>
