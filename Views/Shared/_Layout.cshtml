<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RECODETUR :: Sua Agência de Viagens</title>
    <link rel="stylesheet" href="/entrega-pessoal/src/main/resources/static/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Website.styles.css" asp-append-version="true" />

    <link rel="apple-touch-icon" sizes="180x180" href="/entrega-pessoal/src/main/resources/static/img/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/entrega-pessoal/src/main/resources/static/img/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/entrega-pessoal/src/main/resources/static/img/favicon/favicon-16x16.png">
    <link rel="manifest" href="/entrega-pessoal/src/main/resources/static/img/favicon/site.webmanifest">
    <link rel="mask-icon" href="/entrega-pessoal/src/main/resources/static/img/favicon/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="shortcut icon" href="/entrega-pessoal/src/main/resources/static/img/favicon/favicon.ico">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="msapplication-config" content="/entrega-pessoal/src/main/resources/static/img/favicon/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">
    <style>
        p.truncate-3l {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RecodeTur</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Destinos" asp-action="Index">Destinos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Hospedagem" asp-action="Index">Hospedagem</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="OutrosServicos" asp-action="Index">Outros Serviços</a>
                        </li>
                        <div class="align-self-end">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Cadastre-se" asp-action="Index">Cadastre-se</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Entrar" asp-action="Index">Entrar</a>
                            </li>
                        </ul>
                    </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row py-3">
                    <div class="col-12 col-md-4 text-center text-md-start">
                        &copy; 2022 - RecodeTur <br>
                        Endereço, num, Cidade/Estado <br>
                        CNPJ XX.XXX.XXX/XXXX-XX
                    </div>
                    <div class="col-12 col-md-4 text-center">
                        <a asp-area="" asp-controller="Home" asp-action="Privacidade">Política de
                            Privacidade</a><br>
                        <a asp-area="" asp-controller="Home" asp-action="TermosUso">Termos de Uso</a><br>
                        <a asp-area="" asp-controller="Home" asp-action="QuemSomos">Quem Somos</a><br>
                        <a asp-area="" asp-controller="Home" asp-action="Cancelamentos">Cancelamentos</a><br>
                    </div>
                    <div class="col-12 col-md-4 text-center text-md-end">
                        <a href="/entrega-pessoal/src/main/resources/templates/pages/contato.html" class="text-decoration-none text-dark">Contato</a><br>
                        Email: <a href="mailto:email@recodetur.com.br"
                            class="text-decoration-none text-dark">email@recodetur.com.br</a><br>
                        Telefone: <a href="phone:XXXXXXXXXXX"
                            class="text-decoration-none text-dark">(XX)XXXXX-XXXX</a><br>
                    </div>
                </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="/entrega-pessoal/src/main/resources/static/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
